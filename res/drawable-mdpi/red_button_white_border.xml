<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  
<item>
   <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
   <stroke android:width="2dp" android:color="#bbeeeeee" />
          <solid android:color="#bbeeeeee"
                android:dither="true" />    
          <corners android:radius="9dp" />
    </shape>
</item>

<item android:bottom="2dp" android:right="2dp" android:top="2dp" android:left="2dp">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
          <gradient
                android:startColor="#f911"
                android:centerColor="#f711"
                android:centerX="0.60"
                android:endColor="#fa11"
                android:angle="90"
                android:dither="true" />    
          <corners android:radius="9dp" />
    </shape>
</item>




<item android:bottom="12dp" android:right="2dp" android:top="2dp" android:left="2dp"> 
     <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
          <gradient
                android:startColor="#3eee"
                android:centerColor="#3bbb"
                android:centerX="0.30"
                android:endColor="#0000"
                android:angle="270"
                android:dither="true" />    
           <corners android:radius="9dp" />

    </shape>
</item>  
</layer-list>


